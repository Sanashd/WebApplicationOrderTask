@model IEnumerable<WebApplicationOrder.Models.DBEntities.OrderMaster>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row"> 
<p class="col-md-6">
    <a asp-action="Create" class="btn btn-success btn-sm">Add Order Master</a>
</p>


<div class="col-md-4">
    <form class="d-flex" asp-action="Index" asp-controller="OrderMasters">
        <input name="searchCustomer" class="form-control me-1" type="search" placeholder="Search by Customer" aria-label="Search" />
        <button class="btn btn-dark" type="submit"> Search </button>

    </form>

</div>
<div class="col-md-2">
    <a asp-action="Index" class="text-dark"> Back to list</a>

</div>

</div>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderedAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedAmount)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
